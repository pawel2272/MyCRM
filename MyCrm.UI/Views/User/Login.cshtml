@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model LoginCommand

<div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                Sign in
            </div>
            <div class="panel-body">
                <form method="post" asp-controller="User" asp-action="Login">
                    <div class="form-group">
                        <label>Login</label>
                        <input type="text" placeholder="Username" name="username" class="form-control" asp-for="Username" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" placeholder="Password" name="password" class="form-control" asp-for="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>
                            Remember me
                            <input type="checkbox" name="rememberMe" value="Y" asp-for="RememberMe" />
                        </label>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-default" value="Sign in" />
                        <a class="btn btn-default" asp-controller="Home" asp-action="Index">Cancel</a>
                    </div>
                </form>

                <p style="color:blue;">Login: admin, Password: admin</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
    </div>
</div>

