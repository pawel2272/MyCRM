
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model AddUserCommand

<div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                Sign up
            </div>
            <div class="panel-body">
                <form method="post" asp-area="" asp-controller="User" asp-action="Register">
                    <div class="form-group">
                        <label>Login</label>
                        <input type="text" placeholder="Login" name="username" class="form-control" asp-for="Username" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" placeholder="Password" name="password" class="form-control" asp-for="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>
                            Gender
                            <select name="gender" asp-for="Gender">
                                <option value="M">Male</option>
                                <option value="F">Female</option>
                            </select>
                        </label>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-default" value="Sign up" />
                        <a asp-area="" asp-controller="Home" asp-action="Index">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
    </div>
</div>